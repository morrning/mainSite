{% extends 'base.html.twig' %}

{% block title %}ورود به سامانه{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block body %}
    <div class="card-center">
        <div class="row">
            <div class="col-6 card-center">
                <div class="card">
                    <div class="card-header">
                        ورود به سامانه
                    </div>
                    <div class="card-body">
                        {% block alert %}
                            {% if alert is defined %}
                                {% if alert is not null %}
                                    <div class="alert alert-{{ alert.type }}" role="alert">
                                        <i class="material-icons">error</i>
                                        {{ alert.message }}
                                    </div>
                                {% endif %}
                            {% endif %}
                        {% endblock %}
                        {{ form_start(form) }}
                        {{ form_label(form.userName) }}
                        {{ form_widget(form.userName) }}
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password) }}
                        <br>
                        <div class="row">
                            <div class="col-2">
                                {{ form_widget(form.save) }}
                            </div>
                            <div class="col-10">
                                    <a href="{{ path('userRegister') }}" class="btn btn-success"><span class="material-icons">add</span> حساب کاربری ندارید؟ هم‌اکنون عضو شوید </a>
                            </div>
                        </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-bottom">
            <div class="container">
                <a class="navbar-brand" href="{{ asset('userLogin') }}">تمام حقوق برای توسعه فناوری سرکش محفوظ است.</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link">نسخه نرم افزار:1.0.0.1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">نسخه بانک اطلاعاتی:18.0.0.1</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </footer>

{% endblock %}